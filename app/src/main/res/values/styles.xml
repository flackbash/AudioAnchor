<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorDeletableIcon">@color/colorDeletableIcon</item>
        <item name="playActivityHeaderBG">@color/colorPlayActivityHeaderBG</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_item_activated_background</item>
        <item name="actionModeStyle">@style/LStyled.ActionMode</item>
    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimaryBright</item>
    </style>

    <style name="EmptyListTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="EmptyListProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MediaControlFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:src">@drawable/ic_play_white</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Sleep timer quick button style -->
    <style name="sleep_timer_quick_button">
        <item name="android:layout_width">@dimen/sleep_timer_quick_button_height</item>
        <item name="android:layout_height">@dimen/sleep_timer_quick_button_height</item>
        <item name="android:background">@drawable/sleep_timer_quick_button</item>
        <item name="android:layout_margin">@dimen/tiny_margin</item>
        <item name="android:padding">@dimen/medium_margin</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>
