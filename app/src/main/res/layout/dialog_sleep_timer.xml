<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/medium_margin">
        <Button
            android:id="@+id/quick_button_0"
            style="@style/sleep_timer_quick_button"
            android:text="@string/sleep_timer_quick_button_0"/>
        <Button
            android:id="@+id/quick_button_1"
            style="@style/sleep_timer_quick_button"
            android:text="@string/sleep_timer_quick_button_1"/>
        <Button
            android:id="@+id/quick_button_2"
            style="@style/sleep_timer_quick_button"
            android:text="@string/sleep_timer_quick_button_2"/>
        <Button
            android:id="@+id/quick_button_3"
            style="@style/sleep_timer_quick_button"
            android:text="@string/sleep_timer_quick_button_3"/>
        <Button
            android:id="@+id/quick_button_4"
            style="@style/sleep_timer_quick_button"
            android:text="@string/sleep_timer_quick_button_4"/>
    </LinearLayout>


    <EditText
        android:id="@+id/sleep_timer_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_font_size"
        android:inputType="number"
        android:minWidth="@dimen/minutes_min_width"
        android:gravity="center_horizontal"
        android:maxLength="3" />

</LinearLayout>
